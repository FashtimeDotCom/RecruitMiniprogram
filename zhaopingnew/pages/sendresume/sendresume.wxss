/* pages/sendresume/sendresume.wxss */

.personinfo {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.userinfo-avatar {
  display: flex;
  width: 223rpx;
  height: 223rpx;
  margin-top: 9%;
  margin-right: 3%;
  margin-bottom: 3%;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.personinfo-right {
  width: 50%;
  display: flex;
  flex-direction: column;
  margin-top: 16%;
  margin-left: 11.9%;
}

.name {
  width: 323rpx;
  font-size: 19px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


.phone {
  font-size: 13px;
  text-decoration: underline;
}

