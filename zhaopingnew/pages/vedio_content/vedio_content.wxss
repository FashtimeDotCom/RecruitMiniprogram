/* inputæ¡† */
.chat-input {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}

.chat-input-wrapper {
  width: 100%;
  display: flex;
  padding: 16rpx 0;
  background-color: #f4f4f6;
  border-top: 1rpx solid #d6d7d9;
}

.chat-input-record > image {
  margin-top: 14rpx;
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}

.chat-input-main {
  flex: 1;
  height: 100%;
  padding: 0 16rpx;
}

.chat-input-main > input {
  height: 46rpx;
  line-height: 46rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 10rpx;
  border: 1rpx solid #d6d7d9;
  font-size: 14px;
}

.chat-input-other {
  width: 140rpx;
}

.chat-input-other > image {
  margin-top: 14rpx;
  width: 50rpx;
  height: 50rpx;
}

.chat-input-other > image:first-child {
  margin-right: 20rpx;
}
.btsend {
  width: 100rpx;
  height: 50rpx;
  background-color: #b1845c;
  color: white;
  border-radius: 12rpx;
  font-family: Segoe UI;
  text-align: center;
  line-height: 49rpx;
  margin-top: 9rpx;
  margin-left: 16rpx;
}
