page {
  width: 100%;
  height: 100%;
  background-color: #ededed;
}

.bigbody {
  width: 100%;
  height: 100%;
}

.personinfo {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding-bottom: 6%;
  background-color: white;
}

.userinfo-avatar {
  display: flex;
  width: 223rpx;
  height: 223rpx;
  margin-top: 9%;
  margin-right: 3%;
  margin-bottom: 3%;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.personinfo-right {
  width: 50%;
  height: 160.1rpx;
  display: flex;
  flex-direction: column;
  margin-top: 16%;
  margin-left: 11.9%;
}

.name {
  width: 323rpx;
  font-size: 19px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.phone {
  font-size: 13px;
  text-decoration: underline;
}

.addinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.addcontent {
  display: flex;
  justify-content: center;
  width: 66%;
  margin-top: 3%;
  padding: 3%;
  background-color: white;
}

.plusimg {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.font {
  height: 50rpx;
  line-height: 50rpx;
}

button {
  margin-top: 60rpx;
  width: 160rpx;
  height: 60rpx;
  font-size: 33rpx;
  background-color: #e0cab5;
  color: white;
  align-items: center;
  line-height: 60rpx;
}

.viewbutton{
  width: 100%;
  display: flex;
  justify-content: space-around;
}