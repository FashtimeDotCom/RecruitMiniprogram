/* pages/companydetail/companydetail.wxss */

page {
  background-color: #ededed;
  width: 100%;
}

.bigbody {
  width: 100%;
  height: 100%;
}

.top {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 30%;
  margin-top: 1.9%;
  z-index: -1;
}

.topbgimg {
  display: flex;
  border-radius: 56rpx;
  width: 90%;
  height: 300rpx;
  z-index: -1;
}

.headimg {
  position: absolute;
  display: flex;
  width: 139rpx;
  height: 139rpx;
  z-index: 0;
  top: 220rpx;
  left: 69rpx;
}

.attention {
  position: absolute;
  display: flex;
  width: 59rpx;
  height: 59rpx;
  z-index: 1;
  right: 39rpx;
}

.attentioncontent {
  position: absolute;
  display: flex;
  z-index: 0;
  right: 73rpx;
  top: 23rpx;
  padding-left: 10rpx;
  padding-right: 29rpx;
  background-color: #c5b89e;
  opacity: 0.93;
  color: white;
}

.companyname {
  position: absolute;
  display: flex;
  z-index: 0;
  left: 259rpx;
  top: 160px;
}

.line {
  position: absolute;
  margin: 0 auto;
  height: 5rpx;
  width: 86%;
  background: #e0cab5;
  top: 369rpx;
  z-index: 0;
}

.line2 {
  margin: 29rpx auto;
  height: 5rpx;
  width: 86%;
  background: #e0cab5;
}

.line3 {
  margin: 100rpx auto;
  height: 5rpx;
  width: 66%;
  background: #e0cab5;
}

.bottom {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.acontent {
  display: flex;
  margin-top: 3%;
  margin-left: 6%;
  margin-right: 6%;
}

.fontbold {
  font-weight: bold;
  background-color: white;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  padding-left: 6%;
  padding-top: 1.6%;
  padding-bottom: 1.6%;
}

.redline {
  text-decoration: underline;
  color: red;
  background-color: white;
  padding-top: 1.6%;
  padding-bottom: 1.6%;
}

.end {
  background-color: white;
  padding-left: 1.3%;
  padding-top: 1.6%;
  padding-bottom: 1.6%;
  padding-right: 6%;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.square {
  width: 16rpx;
  height: 50rpx;
  background-color: #c96;
  margin-right: 3%;
}

.smalltitle {
  font-weight: bold;
}

.imgdetail {
  height: 300rpx;
}

.btview {
  display: flex;
  flex-direction: row;
  margin-bottom: 100rpx;
}

.btview button {
  width: 160rpx;
  height: 60rpx;
  font-size: 33rpx;
  background-color: #e0cab5;
  color: white;
  align-items: center;
  line-height: 60rpx;
}
