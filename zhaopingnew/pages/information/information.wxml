<view class="container">
  <view hidden="{{companyFlag}}" class="content">
    <form bindsubmit="submit" class="myform">
      <view class="item">
        <view class="itemLeft"></view>
        <view class="itemRight">
          <view class="name">姓名</view>
          <input class="nameType" name="user_name" type="text" value="{{info.user_name}}"></input>
        </view>
      </view>
      <view class="item">
        <view class="itemLeft"></view>
        <view class="itemRight">
          <view class="name">性别</view>
          <input class="nameType" name="user_sex" type="text" value="{{info.user_sex}}"></input>
        </view>
      </view>
      <view class="item">
        <view class="itemLeft"></view>
        <view class="itemRight">
          <view class="name">电话</view>
          <input class="nameType" name="user_mobile" type="text" value="{{info.user_mobile}}"></input>
        </view>
      </view>
      <view class="item">
        <view class="itemLeft"></view>
        <view class="itemRight">
          <view class="name">专业</view>
          <input class="nameType" name="user_major" type="text" value="{{info.user_major}}"></input>
        </view>
      </view>
      <view class="item">
        <view class="itemLeft"></view>
        <view class="itemRight">
          <view class="name">生日</view>
          <input class="nameType" name="user_birth" type="text" value="{{info.user_birth}}"></input>
        </view>
      </view>
      <button formType="submit" class="bt">修改提交</button>
    </form>
  </view>
  <view hidden="{{!companyFlag}}" class="content">
    <form bindsubmit="submit" class="myform">
      <view class="item">
        <view class="itemLeft"></view>
