.block {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #ede6db;
}

.picture {
  width: 180rpx;
  height: 180rpx;
  border-radius: 0%;
  border: 1.3px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.seximg {
  width: 30rpx;
  height: 30rpx;
  margin-left: 6%;
}

.acontent {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-around;
  margin-top: 3%;
  padding-bottom: 3%;
  flex-direction: row;
}

.start {
  margin-top: 3.6%;
  width: 5%;
  height: 80%;
}

.end {
  margin-top: 3.6%;
  width: 5%;
  height: 80%;
}

.middle {
  width: 90%;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.top {
  padding: 1.6%;
}

.bottom {
  display: flex;
  flex-direction: row;
}

.right {
  margin-left:6%; 
  width: 65%;
  display: flex;
  flex-direction: column;
}


