/* pages/person/person.wxss */

page {
  background-color: #f2e8da;
  width: 100%;
  height: 100%;
}

.backgroundcomb {
  width: 100%;
  height: 100%;
}

.block1 {
  position: fixed;
  margin: 9%;
  margin-top: 26%;
  width: 80%;
  height: 69%;
  border-radius: 3.6%;
  background: white;
  z-index: -1;
}

.floatb {
  position: fixed;
  background-color: #e2d2c0;
  z-index: -2;
}

.one {
  height: 19%;
  width: 19%;
  margin-top: 86%;
}

.two {
  border-top-left-radius: 13%;
  height: 26%;
  width: 30%;
  margin-left: 70%;
  margin-top: 16%;
}

.ablock {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.acontent {
  display: flex;
  height: 5%;
  width: 56%;
  border: solid 1.3px;
  border-color: #e2dabc;
  margin-top: 3%;
  margin-left: 16%;
  border-radius: 3.6%/29%;
  padding-left: 10%;
  align-items: center;
}

.acontent image {
  width: 50rpx;
  height: 50rpx;
}

.acontent text {
  margin-left: 6%;
  font-family: Segoe UI;
}

.personinfo {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.personinfo-left {
  width: 50%;
  display: flex;
  flex-direction: column;
  margin-top: 13%;
}

.userinfo-avatar {
  display: flex;
  width: 223rpx;
  height: 223rpx;
  margin-top: 13%;
  margin-left: 11.9%;
  margin-right: 3%;
  margin-bottom: 3%;
  border-radius: 23%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.user {
  font-family: Segoe UI;
  font-size: 13px;
}

.name {
  width: 323rpx;
  font-size: 19px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.numbandident {
  display: flex;
  justify-content: flex-start;
  margin-top: 3.6%;
}

.sexandnum {
  display: flex;
  justify-content: flex-start;
  margin-top: 2.3%;
}

.sex {
  display: flex;
  align-items: center;
}

.seximg {
  width: 29rpx;
  height: 29rpx;
}

.phone {
  margin-left: 9%;
  text-decoration: underline;
}

.compy {
  width: 90%;
  margin-top: 1.6%;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.clickLogin {
  width: 70%;
  margin-top: 19%;
  margin-left: 0;
  font-family: Segoe UI;
  font-size: 23px;
  font-weight: bold;
  text-decoration: underline;
  background-color: transparent;
  border: none;
}
.clickLogin::after {
  border: none;
}

.attention {
  width: 188rpx;
  display: flex;
  border: solid 1.3px;
  border-color: #e2dabc;
  margin-top: 6%;
  margin-left: 6%;
  border-radius: 16rpx;
  align-items: center;
  padding: 3%;
  padding-left: 29rpx;
  padding-right: 19rpx;
}

.attention image {
  margin-right: 6%;
  width: 46rpx;
  height: 46rpx;
}

.ident {
  background-color: #f0d8cd;
  border-radius: 23rpx;
  margin-left: 3.6%;
  padding-right: 13rpx;
  padding-left: 13rpx;
  padding-top: 3rpx;
  padding-bottom: 3rpx;
  font-weight: bold;
  align-items: center;
}
