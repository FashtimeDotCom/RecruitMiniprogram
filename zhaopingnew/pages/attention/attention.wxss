.block {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #ede6db;
}

.picture {
  width: 180rpx;
  height: 180rpx;
  border-radius: 0%;
  border: 1.3px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.sex{
  margin-top: 5rpx;
  display: flex;
}
.seximg {
  width: 30rpx;
  height: 30rpx;
  margin-left: 6%;
  display: inline;
}
.sexfont{
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  display: inline;
}

.acontent {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-top: 3%;
  background-color: white;
  border-radius: 30rpx;
  padding-top: 3%;
  padding-bottom: 3%;
}

.right {
  width: 66%;
  display: flex;
  flex-direction: column;
}

.righttop {
  display: flex;
  justify-content: space-between;
}
.rightbottom{
  max-height: 160rpx;
}
.detail {
  margin-top: 10rpx;
  display: -webkit-box;
  font-size: 28rpx;
  color: #000;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.ident {
  font-size: 26rpx;
  background-color: #f0d8cd;
  border-radius: 9rpx;
  padding: 3rpx;
  padding-left: 9rpx;
  padding-right: 9rpx;
  align-items: center;
}

.attentionimg {
  width: 36rpx;
  height: 36rpx;
}

